//作业9 Signup经过看老师的教学视频重写后复用的signin.jade文件
extends layout

block content
  link(rel='stylesheet', href='/stylesheets/style.css')
  script(type='text/javascript' src='javascripts/signin.js')

  h1 用户登录
  div#container
    form(id='signin' method='post')
      if error
        div.error.server!= error

      div.username
        label(for='username') 用户
        input(id='username', name='username')

      div.password
        label(for='password') 密码
        input(id='password', name='password' type='password')

      div.buttons
        input.button.reset(type='reset', value='重置')
        input.button.submit(type='submit', value='登录')
        a.signin-signup(href='/regist') 注册